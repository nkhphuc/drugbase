<header>
    <nav>
        <%= link_to "Home", root_path %>
        <%= link_to "About", about_path %>
        <ul>
            <% if current_user %>
                <li>
                    <%= link_to "Account Settings", edit_user_registration_path(current_user) %>
                </li>
                <li>
                    <%= button_to "Sign Out", signout_path, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } %>
                </li>
            <% else %>
                <li>
                    <%= button_to "Sign In", signin_path, method: :get %>
                </li>
                <li>
                    <%= button_to "Sign Up", signup_path, method: :get %>
                </li>
            <% end %>
            <li>
                <%= button_to "Workplace", workplaces_path, method: :get %>
            </li>
        </ul>
    </nav>
</header>