<% flash.each do |key, value| %>
  <% if key = "notice" %>
    <% aclass = "success" %>
  <% end %>
  <div class="alert alert-<%= aclass %> alert-dismissible fade show" role="alert">
    <%= value %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>     
  </div>
<% end %>