<% if current_workplace %>
    <% product = current_workplace.products.find_by(drug_id: drug.id) %>
<% end %>
<div>
    <h2>
        Name: <%= link_to drug.name, drug_path(drug) %>
    </h2>
    <h3>
        Registration No.: <%= drug.registration_no %>
    </h3>
    <%= turbo_frame_tag "product_toggle_button_frame_#{dom_id(drug)}" do %>
        <%= render "products/button", drug: drug, product: product %>
    <%end %>
</div>