<%= turbo_frame_tag "product_toggle_button_frame_#{dom_id(drug)}" do %>
    <% if current_workplace %>
        <% if Product.find_by(drug: drug, workplace: current_workplace) %>
            <%= button_to "Remove Product", drug_product_path(drug, product), method: :delete, form: { data: {turbo_confirm: "Are you sure?"} } %>
        <% else %>
            <%= button_to "Add Product", drug_products_path(drug) %>
        <% end %>
    <% end %>
<% end %>
